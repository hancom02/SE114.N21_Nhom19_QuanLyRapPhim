<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/item_cinemaroom_spinner_constrainlayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/frg_cinemaroom_detail_tv_id"
        android:text="Phòng chiếu:"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/frg_cinemaroom_detail_tv_cinemaroom_id"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:hint="Phòng chiếu 1"
        android:gravity="center"

        android:background="@color/white"


        app:layout_constraintTop_toTopOf="@id/frg_cinemaroom_detail_tv_id"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <TextView
        android:id="@+id/frg_cinemaroom_detail_tv_row"
        android:text="Số hàng ghế:"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/frg_cinemaroom_detail_tv_id"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/frg_cinemaroom_detail_tv_cinemaroom_row"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:gravity="center"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:hint="xx"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="@id/frg_cinemaroom_detail_tv_row"
        app:layout_constraintStart_toStartOf="@id/frg_cinemaroom_detail_tv_cinemaroom_id"
        />

    <TextView
        android:id="@+id/frg_cinemaroom_detail_tv_column"
        android:text="Số cột ghế:"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/frg_cinemaroom_detail_tv_row"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/frg_cinemaroom_detail_tv_cinemaroom_column"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:gravity="center"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:hint="xx"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="@id/frg_cinemaroom_detail_tv_column"
        app:layout_constraintStart_toStartOf="@id/frg_cinemaroom_detail_tv_cinemaroom_id"
        />


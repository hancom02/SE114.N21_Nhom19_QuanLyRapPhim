<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.StaffDetailScreenFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:backgroundTint="#ddd"
                app:cardCornerRadius="9999dp">

                <ImageView
                    android:id="@+id/staff_detail_screen_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:id="@+id/staff_detail_screen_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Minh Chau"
                android:textColor="#333"
                android:textSize="24dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/staff_detail_screen_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mc@mc.com"
                    android:textColor="@color/primary"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giới tính: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/staff_detail_screen_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nam"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày sinh: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/staff_detail_screen_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/1/2002"
                    android:textSize="16dp" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_marginTop="24dp"
                android:id="@+id/staff_detail_screen_btn_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#f66"
                android:text="Xoá tài khoản"
                app:cornerRadius="999dp"
                app:icon="@drawable/delete_primary_24"
                app:iconGravity="textStart"
                app:iconSize="20dp" />
        </LinearLayout>
    </ScrollView>


</FrameLayout>